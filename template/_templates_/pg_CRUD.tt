[%BLOCK BYPK_OMIT_NAMES%]
[%- FOREACH pk IN tbl.$tablename.prkeys -%]
[% IF pk=="client_id"; ELSIF tbl.$tablename.columns.$pk.auto_inc == "Y";",integer";  ELSE; "," ; tbl.$tablename.columns.$pk.data_type; END%]
